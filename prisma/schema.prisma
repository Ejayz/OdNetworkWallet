generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  user_id                              Bytes     @id @db.Binary(16) @default(dbgenerated("(uuid_to_bin(uuid()))"))
  email                                String?   @db.VarChar(150)
  username                             String?   @db.VarChar(150)
  password                             String?   @db.VarChar(266)
  created_at                           DateTime  @default(now()) @db.Timestamp(0)
  updated_at                           DateTime  @default(now()) @db.Timestamp(0)
  is_exist                             Boolean   @default(true)
  OTP                                  Int?
  is_confirmed                         Boolean   @default(false)
  user_type                            Int
  user_type_users_user_typeTouser_type user_type @relation("users_user_typeTouser_type", fields: [user_type], references: [user_type_id], onUpdate: Restrict, map: "users_ibfk_1")

  @@index([user_type], map: "user_type")
}

model user_type {
  user_type_id                     Int      @id @default(autoincrement())
  name                             String   @db.VarChar(64)
  is_exist                         Boolean  @default(true)
  created_at                       DateTime @default(now()) @db.Timestamp(0)
  updated_at                       DateTime @default(now()) @db.Timestamp(0)
  users_users_user_typeTouser_type users[]  @relation("users_user_typeTouser_type")
}
